---
import Link from '@/components/Link.astro'
import SocialIcons from '@/components/SocialIcons.astro'
import AvatarComponent from '@/components/ui/avatar'
import { SITE, SOCIAL_LINKS } from '@/consts'
import Layout from '@/layouts/Layout.astro'
---

<Layout title="Home" description={SITE.DESCRIPTION}>
  <div class="flex h-[calc(100vh-200px)] items-center justify-center px-4">
    <div
      class="flex max-w-screen-lg flex-col items-center gap-6 md:flex-row md:gap-12"
    >
      <AvatarComponent
        client:load
        src="/static/logo.png"
        alt="Philip Dobranowski"
        fallback="PD"
        className="size-64 rounded-full"
      />
      <div class="grid gap-2 text-2xl md:gap-4 md:text-3xl">
        <div class="text-center text-4xl font-bold md:text-left md:text-6xl">
          Hey! ðŸ‘‹, I&apos;m Philip.
        </div>
        <div class="text-center text-2xl text-gray-500 md:text-left dark:text-gray-400">
          I&apos;m a CTF player and cybersecurity enthusiast. Feel free to check
          out my <Link href="/about" underline class="text-primary">about</Link>
          page or contact me at the links below!
        </div>
        <div class="mt-4 flex justify-center gap-4 md:justify-start md:gap-8">
          <SocialIcons
            links={SOCIAL_LINKS}
            size="size-6"
            buttonClassName="size-16"
          />
        </div>
      </div>
    </div>
  </div>
</Layout>
